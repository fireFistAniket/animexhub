{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "Backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/Frontend/dist/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/Backend/src/main.ts"
    }
  ]
}
